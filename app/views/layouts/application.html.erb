<!DOCTYPE html>
<html>
  <head>
    <title>IPost</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <%= render 'home/header' %>
    <% if notice %>
      <p class="notice fadeout"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="notice fadeout"><%= alert %></p>
    <% end %>
    <main>
      <%= yield %>
    </main>
    <%= render 'home/footer' %>
  </body>
</html>
