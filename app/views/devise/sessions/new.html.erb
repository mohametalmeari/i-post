<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'user-form' }) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'field-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-input' %>
  </div>
  <div class="field">
    <%= f.label :password, class: 'field-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'field-input' %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="check-box-container">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", class: 'submit' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
