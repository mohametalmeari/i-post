<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'user-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'field-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Reset Password", class: 'submit' %>
  </div>
<% end %>
