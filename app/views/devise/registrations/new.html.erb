<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'user-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, class: 'field-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-input' %>
  </div>
  <div class="field">
    <%= f.label :username, class: 'field-label' %>
    <%= f.text_field :username, class: 'field-input' %>
  </div>
  <div class="field">
    <%= f.label :name, class: 'field-label' %>
    <%= f.text_field :name, class: 'field-input' %>
  </div>
  <div class="field">
    <%= f.label :password, class: 'field-label' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'field-input' %>
  </div>
  <div class="field">
    <% f.label :password_confirmation, class: 'field-label' %>
    <span class="field-label">
      Confirm PW
    </span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field-input' %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class: 'submit' %>
  </div>
<% end %>
